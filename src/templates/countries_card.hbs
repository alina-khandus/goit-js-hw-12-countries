<div class="country-box">
    <div class="card-body">
        <h2 class="card-title"><span>Country:</span> {{name}}</h2>
        <p class="card-text"><span>Capital</span>: {{capital}}</p>
        <p class="card-text"><span>Population</span>: {{population}}</p>

        <p class="card-text"><span>Languages</span>:</p>
        <ul class="list-group">
            {{#each languages}}
            <li class="list-group-item">{{this.name}}</li>
            {{/each}}
        </ul>
    </div>

    <div class="country-flag">
        <img src="{{flag}}" alt="{{name}}">
    </div>

</div>